{
    "compilerOptions": {
        "strict": true,
        "declaration": true,

        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",

        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "dist*",
    ],
    "include": [
        "**/*",
        ".eslintrc.js",
    ],
}
