{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,

        "lib": [
            "esnext",
            "dom",
        ],
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",

        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        },
    },
    "exclude": [
        "node_modules",
        "dist*",
    ],
    "include": [
        "**/*",
        ".eslintrc.js",
    ],
}
