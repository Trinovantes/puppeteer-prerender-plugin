{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "declaration": true,

        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "dist*",
    ],
    "include": [
        "**/*",
        ".eslintrc.js",
    ],
}
